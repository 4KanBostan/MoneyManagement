<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/soluk_beyaz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/cal_year_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023"
            android:textColor="@color/mor"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/previous_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/cal_year_tw"
            app:layout_constraintEnd_toStartOf="@+id/cal_year_tw"
            app:layout_constraintTop_toTopOf="@+id/cal_year_tw"
            app:srcCompat="@drawable/dialog_left_chevron" />

        <ImageView
            android:id="@+id/next_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/cal_year_tw"
            app:layout_constraintStart_toEndOf="@+id/cal_year_tw"
            app:layout_constraintTop_toTopOf="@+id/cal_year_tw"
            app:srcCompat="@drawable/dialog_right_chevron" />

        <ImageView
            android:id="@+id/cancel_dialog_calendar"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cancel" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Tarih"
            android:textAllCaps="true"
            android:textColor="@color/mor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:background="@color/laci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:columnCount="4"
        android:rowCount="3"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6">

        <TextView
            android:id="@+id/ocak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="OCA"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/subat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="ŞUB"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/mart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="MAR"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/nisan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="Nis"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/mayis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="MAY"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/haziran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="HAZ"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/temmuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="TEM"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/agustos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="AĞU"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/eylul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="EYL"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/ekim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="EKİ"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/kasim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="KAS"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/aralik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="ARA"
            android:textColor="@color/beyaz"
            android:textSize="20sp"
            android:textStyle="italic" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>