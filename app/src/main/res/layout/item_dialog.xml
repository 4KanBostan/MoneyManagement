<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/transparent"
    android:outlineAmbientShadowColor="@color/transparent"
    android:outlineSpotShadowColor="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutItemDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/categoryImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/cutlery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="3500"
            android:textColor="#0D3E38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.38"></TextView>

        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:text="Kategori"
            android:textColor="#1E1C1C"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/categoryImageView"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Banka kartÄ±"
            android:textColor="#272020"
            app:layout_constraintStart_toStartOf="@+id/comment_tv"
            app:layout_constraintTop_toBottomOf="@+id/comment_tv"></TextView>

        <TextView
            android:id="@+id/dialog_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="22/08/2023"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/amount_tv"
            app:layout_constraintTop_toBottomOf="@+id/amount_tv"></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/laci"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/account_tv"
            tools:layout_editor_absoluteX="0dp"></View>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>