<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/light_laci"
        android:outlineSpotShadowColor="@color/light_laci"
        app:cardBackgroundColor="@color/light_laci">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutItemDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/categoryImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/cutlery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/amount_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="3500"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.38"></TextView>

            <TextView
                android:id="@+id/comment__home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="5dp"
                android:text="Kategori"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/categoryImage"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/account_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Banka kartÄ±"
                android:textColor="@color/beyaz"
                app:layout_constraintStart_toStartOf="@+id/comment__home_tv"
                app:layout_constraintTop_toBottomOf="@+id/comment__home_tv"></TextView>

            <TextView
                android:id="@+id/home_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/beyaz"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/amount_home_tv"
                app:layout_constraintTop_toBottomOf="@+id/amount_home_tv"
                tools:text="22/08/2023"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="6dp"
                android:background="@color/soluk_beyaz"
                app:layout_constraintTop_toBottomOf="@+id/account_home_tv"
                tools:layout_editor_absoluteX="0dp"></View>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
