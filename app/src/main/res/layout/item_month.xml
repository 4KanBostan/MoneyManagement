<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/soluk_beyaz">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Mart"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/laci"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/income_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="2000"
            android:textColor="#090909"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/name_tv"
            app:layout_constraintEnd_toStartOf="@+id/expense_tv"
            app:layout_constraintTop_toTopOf="@+id/name_tv"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/expense_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="5500"
            android:textColor="#090909"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/income_tv"
            app:layout_constraintEnd_toStartOf="@+id/total_tv"
            app:layout_constraintTop_toTopOf="@+id/income_tv" />

        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:text="3500"
            android:textColor="#00838F"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/expense_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/expense_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>